<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                      https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Softspring\ShopBundle\Model\Order" table="shop_order">
        <many-to-one field="customer" target-entity="Softspring\ShopBundle\Model\CustomerInterface">
            <join-column name="customer_id" referenced-column-name="id" on-delete="CASCADE" />
        </many-to-one>

        <field name="number" column="number" type="string" nullable="false" length="20" unique="true" />
        <field name="status" column="status" type="string" nullable="false" length="20" />
    </mapped-superclass>

</doctrine-mapping>
