<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                      https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Softspring\ShopBundle\Model\OrderItem" table="shop_order_item">
        <many-to-one field="order" target-entity="Softspring\ShopBundle\Model\OrderInterface">
            <join-column name="order_id" referenced-column-name="id" on-delete="CASCADE" />
        </many-to-one>

        <many-to-one field="item" target-entity="Softspring\ShopBundle\Model\SalableInterface">
            <join-column name="item_id" referenced-column-name="id" on-delete="CASCADE" />
        </many-to-one>

        <field name="quantity" column="quantity" type="float" precision="10" scale="2" nullable="false" />
    </mapped-superclass>

</doctrine-mapping>
