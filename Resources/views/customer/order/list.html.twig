{% extends '@SfsShop/customer_layout.html.twig' %}

{% block content %}

    {% if orders|length == 0 %}
        You have not any orders.
    {% else %}
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Order No.</th>
                <th>Date</th>
                <th>Status</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
            </thead>

            <tbody>
            {% for order in orders %}
                <tr>
                    <td>{{ order.number }}</td>
                    <td>{{ order.date|date('d-m-Y') }}</td>
                    <td>{{ order.status }}</td>
                    <td>{{ order.total }}</td>
                    <td>
                        <a href="{{ url('sfs_shop_customer_orders_details', {'order':order.id}) }}">details</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock content %}