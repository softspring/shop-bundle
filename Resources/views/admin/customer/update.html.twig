{% trans_default_domain 'sfs_shop' %}
{% extends '@SfsShop/admin_layout.html.twig' %}
{% block title %}{{ 'admin_customers.update.page_title'|trans }}{% endblock %}

{% block content %}
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h1 class="h3">{{ 'admin_customers.update.title'|trans }}</h1>
    </div>
    {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_rest(form) }}
        <div class="d-flex justify-content-end align-items-center">
            <a href="{{ url('sfs_shop_admin_customers_list') }}" class="btn btn-outline-secondary ml-3">{{ 'admin_customers.update.actions.cancel.button'|trans }}</a>
            <a href="{{ url('sfs_shop_admin_customers_delete', {'customer':customer}) }}" class="btn btn-danger ml-3">{{ 'admin_customers.update.actions.delete.button'|trans }}</a>
            <input type="submit" value="{{ 'admin_customers.update.actions.update.button'|trans }}" class="btn btn-primary ml-3" />
        </div>
    {{ form_end(form) }}
{% endblock content %}