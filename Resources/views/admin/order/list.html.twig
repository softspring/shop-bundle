{% trans_default_domain 'sfs_shop' %}
{% extends '@SfsShop/admin_layout.html.twig' %}
{% block title %}{{ 'admin_orders.list.page_title'|trans }}{% endblock %}

{% block content %}
    <h2>{{ 'admin_orders.list.title'|trans }}</h2>

    <div class="text-right">
        <a class="btn btn-primary" href="{{ url('sfs_shop_admin_orders_create') }}">{{ 'admin_orders.list.actions.create.button'|trans }}</a>
    </div>

    {{ form_start(filterForm) }}
    {{ form_widget(filterForm) }}
    {{ form_rest(filterForm) }}
    {{ form_end(filterForm) }}

    <table class="table">
        <thead>
        <tr>
            <th scope="col">{{ 'admin_orders.list.table.id.header'|trans }}</th>
            <th scope="col">{{ 'admin_orders.list.table.number.header'|trans }}</th>
            <th scope="col">{{ 'admin_orders.list.table.status.header'|trans }}</th>
            <th scope="col">{{ 'admin_orders.list.table.actions.header'|trans }}</th>
        </tr>
        </thead>

        <tbody>
        {% include '@SfsShop/admin/order/list-page.html.twig' %}
        </tbody>

        {% if entities.pages|default(false) %}
            <tfoot>
            <tr>
                <td colspan="20">
                    {% if entities.prevPage %}
                        <a href="{{ url('sfs_shop_admin_orders_list', app.request.query.all|merge({ page: entities.prevPage })) }}">Prev page</a>
                    {% endif %}

                    {% if entities.nextPage %}
                        <a class="float-right" href="{{ url('sfs_shop_admin_orders_list', app.request.query.all|merge({ page: entities.nextPage })) }}">Next page</a>
                    {% endif %}
                </td>
            </tr>
            </tfoot>
        {% endif %}
    </table>
{% endblock content %}